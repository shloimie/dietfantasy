datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // used by your app at runtime
  directUrl = env("DIRECT_URL") // used by Prisma CLI for migrate/pull
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  first    String
  last     String
  address  String
  apt      String?
  city     String
  dislikes String?
  county   String?
  zip      String?
  state    String?
  phone    String?
  medicaid Boolean @default(false)
  paused   Boolean @default(false)
  complex  Boolean @default(false)

  schedule Schedule?

  @@map("User") // table is public."User"
}

model Schedule {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique @map("userId")
  monday    Boolean @default(true)
  tuesday   Boolean @default(true)
  wednesday Boolean @default(true)
  thursday  Boolean @default(true)
  friday    Boolean @default(true)
  saturday  Boolean @default(true)
  sunday    Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Schedule") // Use your actual table name here if different
}

model CityColor {
  id         Int      @id @default(autoincrement())
  city       String   @unique
  color      String
  updated_at DateTime @default(now())

  @@map("CityColor") // Use your actual table name; this creates mapping only
}
